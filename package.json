{
  "name": "ya.ls-graphql",
  "version": "1.0.0",
  "description": "Yet another link shortener GraphQL backend",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && npm run serve",
    "serve": "node -r dotenv/config dist/index.js",
    "build": "npm run build-ts",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-node": "nodemon -r dotenv/config dist/server.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mythio/ya.ls-graphql.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mythio/ya.ls-graphql/issues"
  },
  "homepage": "https://github.com/mythio/ya.ls-graphql#readme",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@sendgrid/mail": "^7.0.0",
    "apollo-server-express": "^2.12.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^14.6.0",
    "graphql-config": "^3.0.0-alpha.17",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^0.17.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.6",
    "@types/graphql": "^14.5.0",
    "@types/node": "^13.11.1",
    "apollo-server-testing": "^2.11.0",
    "graphql-tag": "^2.10.3",
    "graphql-tools": "^4.0.7",
    "nodemon": "^2.0.3",
    "ts-node": "^8.8.2",
    "tslint": "^6.1.1",
    "typescript": "^3.8.3"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
