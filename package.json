{
	"name": "ya.ls-graphql",
	"version": "1.0.0",
	"description": "Yet another link shortener GraphQL backend",
	"main": "index.js",
	"scripts": {
		"build": "rm -rf dist && webpack --config webpack.$NODE_ENV.js",
		"start:dev": "node -r dotenv/config  -r source-map-support/register dist/server.js",
		"start": "node dist/server.js",
		"codegen": "graphql-codegen --config codegen.yml",
		"test": "jest --detectOpenHandles --verbose --watchAll --coverage",
		"test-ci": "jest --forceExit --detectOpenHandles --verbose",
		"heroku-postbuild": "sh addons/init.sh && npm run build",
		"lint": "tsc --noEmit && eslint 'src/**/*.{js,ts,tsx}' --quiet --fix"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mythio/ya.ls-graphql.git"
	},
